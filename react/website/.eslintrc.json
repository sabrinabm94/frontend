{
    "root": true,
    "extends": "eslint:recommended",
    "rules": {
        // enable additional rules
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "off"
        ],
        "semi": [
            "error",
            "never"
        ],
        // override configuration set by extending "eslint:recommended"
        "no-empty": "warn",
        "no-cond-assign": [
            "error",
            "always"
        ],
        // disable rules from base configurations
        "for-direction": "off",
        "react/react-in-jsx-scope": "off"
    }
}